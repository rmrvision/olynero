generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      Project[]
}

enum UserRole {
  USER
  ADMIN
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  isPublic    Boolean  @default(false)

  files       File[]
  messages    Message[]
  actions     Action[]

  @@index([userId])
}

model File {
  id        String   @id @default(cuid())
  path      String   // e.g. "src/app/page.tsx", must be unique per project
  content   String   @db.Text
  version   Int      @default(1)
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, path])
  @@index([projectId])
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.Text
  role      Role     @default(user)
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([projectId])
}

model Action {
  id        String      @id @default(cuid())
  type      ActionType
  status    ActionStatus @default(PENDING)
  data      Json?       // Metadata (e.g. file path, shell command)
  output    String?     @db.Text // Logs or result
  
  projectId String
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([projectId])
}

enum Role {
  user
  assistant
  system
}

enum ActionType {
  CREATE_FILE
  UPDATE_FILE
  DELETE_FILE
  RUN_COMMAND
  DEPLOY
}

enum ActionStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
